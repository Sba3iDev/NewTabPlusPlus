{
    "manifest_version": 3,
    "name": "NewTab++",
    "version": "1.0.0",
    "description": "Enhance your New Tab page with customizable shortcuts",
    "permissions": ["storage", "contextMenus", "activeTab"],
    "host_permissions": ["https://suggestqueries.google.com/*", "https://favicon.im/*"],
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Add to NewTab++ Shortcuts"
    },
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "src/newtab.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; style-src 'self'; img-src 'self' https: data:;"
    },
    "icons": {
        "16": "public/icons/icon16.png",
        "32": "public/icons/icon32.png",
        "48": "public/icons/icon48.png",
        "128": "public/icons/icon128.png"
    }
}
